@model WebApplication4.Models.MessageThread;


<div class="row" id="emailList__list">
    <!-- Email Row Starts -->
    <div class="col" id="emailRow">
        <div class="col" id="emailRow__options">
            <input type="checkbox" />
            <span class="material-icons"> label_important </span>
        </div>
        <div class="col">
            <h3 id="emailRow__title">To: @Model.thrd.ReceiverEmail</h3>
        </div>
        <div class="col" id="emailRow__message">
            <h4>
                @Model.thrd.Subject
                <span class="emailRow__description"> @Model.msg.Msg</span>
            </h4>
        </div>
        <div class="col">
            <p class="emailRow__time">@Model.msg.DateAndTime</p>
        </div>
    </div>
</div>